<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="3dp"
    android:orientation="horizontal">
    <Button
        android:id="@+id/btn_dishdone"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="上菜"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_dish"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:background="@color/color_OrangeTheme_ChoosedFoodBackgroundArea"
        android:ellipsize="end"
        android:gravity="left|center"
        android:maxLines="1"
        android:textSize="35sp" />
    <TextView
        android:id="@+id/tv_desknum"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@color/color_OrangeTheme_Category1Font"
        android:gravity="left|center"
        android:textColor="@color/red"
        android:textSize="40sp" />
    <TextView
        android:id="@+id/tv_desks"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/color_OrangeTheme_Category2Font"
        android:gravity="left|center"
        android:textSize="40sp" />




</LinearLayout>